#!/usr/bin/env sh

case $BLOCK_BUTTON in
  1) setsid "$TERMINAL" -e pulsemixer & ;;
  2) pulsemixer --toggle-mute ;;
  4) pulsemixer --change-volume +5 ;;
  5) pulsemixer --change-volume -5 ;;
  3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
esac

volstat="$(pactl list sinks)"

echo "$volstat" | grep -q "Mute: yes" && printf "ðŸ”‡\\n" && exit

vol="$(pamixer --get-volume)"

pulsemixer --list-sinks | grep -E 'HDMI.*Default' 1> /dev/null

if [ "$?" -eq 0 ]; then
  icon="ðŸ“¢"
elif [ "$vol" -gt "70" ]; then
  icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
  icon="ðŸ”ˆ"
else
  icon="ðŸ”‰"
fi

printf "%s %s%%\\n" "$icon" "$vol"

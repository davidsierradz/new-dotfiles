{
  "coc.preferences.formatOnSaveFiletypes": [
    "markdown",
    "vimwiki"
  ],
  "coc.source.file.ignoreHidden": false,
  "coc.source.file.triggerCharacters": ["/", ".", ".."],
  "markdownlint.config": {
    "default": true,
    "line_length": false,
    "no-duplicate-heading": {
      "siblings_only": true
    }
  },
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "snippets.extends": { "vimwiki": ["markdown", "vimwiki"] },
  "snippets.userSnippetsDirectory": "~/.config/nvim/snips/UltiSnips",
  "smartf.wordJump": false,
  "smartf.jumpOnTrigger": false,
  "diagnostic-languageserver.enable": false,
  "diagnostic-languageserver.filetypes": {
    "markdown": ["languagetool"],
    "vimwiki": ["languagetool"]
  },
  "diagnostic-languageserver.linters": {
    "languagetool": {
      "command": "languagetool",
      "debounce": 200,
      "args": ["--language", "es", "-"],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "languagetool",
      "formatLines": 2,
      "formatPattern": [
        "^\\d+?\\.\\)\\s+Line\\s+(\\d+),\\s+column\\s+(\\d+),\\s+([^\\n]+)\nMessage:\\s+(.*)$",
        {
          "line": 1,
          "column": 2,
          "message": [4, 3]
        }
      ]
    }
  }
}
